<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distribution</id>
    <baseDirectory>${project.artifactId}</baseDirectory>
    <includeBaseDirectory>false</includeBaseDirectory>

    <formats>
        <format>dir</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>native/</outputDirectory>
            <includes>
                <include>*:*:*:linux-x86_64</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>lib/</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>*:mlp-random-search</exclude>
                <exclude>*:*:*:android*</exclude>
                <exclude>*:*:*:ios*</exclude>
                <exclude>*:*:*:macosx*</exclude>
                <exclude>*:*:*:windows*</exclude>
                <exclude>*:*:*:linux-arm*</exclude>
                <exclude>*:*:*:linux-ppc*</exclude>
                <exclude>*:*:*:linux-x86</exclude>
            </excludes>
        </dependencySet>
        <dependencySet>
            <scope>runtime</scope>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*:mlp-random-search</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
        </dependencySet>
    </dependencySets>
</assembly>
